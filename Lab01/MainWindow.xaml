<Window x:Class="Lab01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox Margin="20" ItemsSource="{Binding Items}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Path=Name}" Width="100"/>
                        <TextBlock Text="{Binding Path=Age}" Width="100"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="1" Margin="20" Orientation="Vertical">
            <TextBlock TextWrapping="Wrap" Text="Name" Margin="0,0,-0.2,0"/>
            <TextBox x:Name ="nameTextBox" Height="23" TextWrapping="Wrap" Text="Jarosław" Margin="0,0,-0.2,10"/>
            <TextBlock TextWrapping="Wrap" Text="Age" Margin="0,0,-0.2,0"/>
            <TextBox x:Name="ageTextBox" Height="23" TextWrapping="Wrap" Text="99"  Margin="0,0,-0.2,10"/>
            <Button x:Name = "addNewPersonButton" Content="Add new person" Click="AddNewPersonButton_Click" Margin="0,0,-0.2,0"/>
            <Image x:Name="ImgPerson" Height="212" Margin="0,0,100.8,0" Stretch="Uniform"/>
            <Button x:Name="btnImg" Content="Search your image..." Margin="0,0,100.8,0" Click="BtnImg_Click"/>
        </StackPanel>
    </Grid>
</Window>
