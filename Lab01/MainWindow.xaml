<Window x:Class="Lab01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab01"
        mc:Ignorable="d"
        Title="Profiles" Height="700" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox Margin="20,20,19.8,20.4" ItemsSource="{Binding Items}" MouseDoubleClick="ListBox_MouseDoubleClick">
            <ListBox.ItemTemplate >
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Path=Name}" Width="100" Padding="0,0,5,15"/>
                        <TextBlock Text="{Binding Path=Surname}" Width="100" Padding="0,0,5,15" />
                        <Image Source="{Binding Path=Img}" Height="80" Width="60"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="1" Margin="20.2,20,19.6,20.4" Orientation="Vertical">
            <TextBlock TextWrapping="Wrap" Text="Name" Margin="0,0,-0.2,0"/>
            <TextBox x:Name ="nameTextBox" Height="23" TextWrapping="Wrap" Text="Mariusz" Margin="0,0,-0.2,10"/>
            <TextBlock TextWrapping="Wrap" Text="Surname" Margin="0,0,-0.2,0"/>
            <TextBox x:Name="ageTextBox" Height="23" TextWrapping="Wrap" Text="Mazur"  Margin="0,0,-0.2,10"/>
            <Button x:Name="btnImg" Content="Search your image..." Margin="91,0,91,10" Click="BtnImg_Click" ClickMode="Press"/>
            <Image x:Name="ImgPerson" Source="C:\Users\Waldemar\Desktop\Platormy Programistyczne .NET i JAVA\NETProjekt1\Lab01\Images\nonprofile.png" Height="180" Margin="110,0" Stretch="Uniform" Width="135"/>
            <TextBlock TextWrapping="Wrap" Text="Picture:"/>
            <TextBox x:Name="Path" TextWrapping="Wrap"/>
            <Button x:Name = "addNewPersonButton" Content="Add new person" Click="AddNewPersonButton_Click" Margin="91,10,91,0"/>
            <Image x:Name="imgRandom" Height="148" Margin="161,10,160.8,15" Source="C:\Users\Waldemar\Desktop\Platormy Programistyczne .NET i JAVA\NETProjekt1\Lab01\Images\nonprofile.png"/>
            <TextBox x:Name="htmlHeader" Height="23" TextWrapping="Wrap" Text="Random Header" HorizontalAlignment="Center" Margin="1,0,-4,0" FlowDirection="RightToLeft" Width="458" HorizontalContentAlignment="Center"/>
            <Button x:Name="RandomButton" Content="Randomize content!" Margin="91,0,90.8,0" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
